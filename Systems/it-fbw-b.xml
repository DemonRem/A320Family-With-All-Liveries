					<entry><ind>-0.2</ind><dep> 0.0</dep></entry>
					<entry><ind> 0.0</ind><dep> 0.0</dep></entry>
					<entry><ind> 0.2</ind><dep> 0.0</dep></entry>
					<entry><ind> 1.0</ind><dep> 1.0</dep></entry>
				</table>
			</expression>
		</input>
		<input>
			<condition>
				<equals>
					<property>/systems/failures/aileron-right</property>
